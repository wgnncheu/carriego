{
  "type": "object",
  "properties": {
    "isLogin": {
      "type": "identifier",
      "selector": "body",
      "control": "exists"
    },
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "errorMessage": {
      "type": "string"
    },
    "submit": {
      "type": "action"
    }
  },
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
